---
localscript: ""
localstyles: ""
---

<!doctype html>
<html data-theme='dark' lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="icon" type="image/x-icon" href="{{ '/favicon.ico' | url }}">
    <script src="/global-script.ts"></script>
    <link rel="stylesheet" href="{{ '/styles.scss' | url }}">
    {% if localscript %}
      <script src="{{ localscript | url }}"></script>
    {% endif %}
    {% if localstyles %}
      <link rel="stylesheet" href="{{ localstyles | url }}">
    {% endif %}

  </head>
  <body>
    <main>
      <h1>Base Layout</h1>
      {{ content | safe }}
    </main>
    <footer>
    </footer>
  </body>
</html>
